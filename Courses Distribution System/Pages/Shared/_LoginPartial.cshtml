@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Professors/Index">Professors</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Sections/Index">Sections</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Courses/Index">Courses</a>
        </li>
        <li class="nav-item">
            <span class="nav-link text-dark">@User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <a asp-page="/Login" class="custom-btn nav-link">Log Out</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-page="/Login">Log in</a>
        </li>
    </ul>
}