@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card-deck">
    <div class="card">
        <h3 class="card-header">Professors</h3>
        <div class="card-body">
            <p class="card-text"> Go to professors page where you can see a list of existing professors info and edit or delete them, and add new professors.</p>
        </div>
        <div class="card-footer">
            <a asp-page="/Professors/Index" class="btn btn-primary">Go to professors page</a>
        </div>
    </div>
    <div class="card">
        <h3 class="card-header">Sections</h3>
        <div class="card-body">
            <p class="card-text">Go to sections page where you can see a list of existing sections and edit or delete them, add new sections, and distribute those sections on professors.</p>
        </div>
        <div class="card-footer">
            <a asp-page="/Sections/Index" class="btn btn-primary">Go to sections page</a>
        </div>
    </div>
    <div class="card">
        <h3 class="card-header">Courses</h3>
        <div class="card-body">
            <p class="card-text">Go to courses page where you can see a list of existing courses info and edit or delete them, and add new courses.</p>
        </div>
        <div class="card-footer">
            <a asp-page="/Courses/Index" class="btn btn-primary">Go to courses page</a>
        </div>
    </div>
</div>

